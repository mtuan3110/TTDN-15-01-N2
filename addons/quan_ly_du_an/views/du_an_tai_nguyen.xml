<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="view_du_an_tai_nguyen_form" model="ir.ui.view">
            <field name="name">du_an_tai_nguyen</field>
            <field name="model">du_an_tai_nguyen</field>
            <field name="arch" type="xml">
                <form string="Quản Lý Tài Nguyên">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="type"/>
                            <field name="quantity"/>
                            <field name="project_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_du_an_tai_nguyen_tree" model="ir.ui.view">
            <field name="name">du_an_tai_nguyen</field>
            <field name="model">du_an_tai_nguyen</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="quantity"/>
                    <field name="project_id"/>
                </tree>
            </field>
        </record>

        <record id="action_du_an_tai_nguyen" model="ir.actions.act_window">
            <field name="name">Quản lý tài nguyên</field>
            <field name="res_model">du_an_tai_nguyen</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>